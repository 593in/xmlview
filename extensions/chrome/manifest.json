{
	"name" : "XV",
	"version" : "1.0",
	"description" : "View XML files in Google Chrome",
	"background_page": "background.html",
	"permissions" : [
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"options_page": "options.html",
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"content_scripts": [{
		"js": ["xv.js", "controller.js"],
		"matches": ["http://*/*", "https://*/*", "file://*/*"],
		"run_at": "document_end"
	}]
}